---
const { lang = 'pt-BR' } = Astro.props;

const currentYear = new Date().getFullYear();

const texts = {
  'pt-BR': {
    about: "Sobre nós",
    contact: "Contato",
    privacy: "Privacidade",
    terms: "Termos",
    rights: "Todos os direitos reservados."
  },
  'en': {
    about: "About us",
    contact: "Contact",
    privacy: "Privacy",
    terms: "Terms",
    rights: "All rights reserved."
  },
  'es': {
    about: "Sobre nosotros",
    contact: "Contacto",
    privacy: "Privacidad",
    terms: "Términos",
    rights: "Todos los derechos reservados."
  }
};

const t = texts[lang] || texts['en'];
---

<footer class="bg-ocean-dark border-t border-white/5 py-12 mt-auto">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      <div class="col-span-1 md:col-span-2">
        <h3 class="text-2xl font-display font-black text-white mb-4">SURF<span class="text-brand-primary">BITS</span></h3>
        <p class="text-sand-100 max-w-sm">
          Surf Hard, Shop Smart. Your curated guide to the best surf spots, gear, and deals around the globe.
        </p>
      </div>
      <div>
        <h4 class="font-bold text-white mb-4">Explore</h4>
        <ul class="space-y-2">
          <li><a href="/br" class="text-sand-100 hover:text-brand-primary transition-colors">Brasil</a></li>
          <li><a href="/us" class="text-sand-100 hover:text-brand-primary transition-colors">USA</a></li>
          <li><a href="/au" class="text-sand-100 hover:text-brand-primary transition-colors">Australia</a></li>
        </ul>
      </div>
      <div>
        <h4 class="font-bold text-white mb-4">Legal</h4>
        <ul class="space-y-2">
          <li><a href="#" class="text-sand-100 hover:text-brand-primary transition-colors">{t.privacy}</a></li>
          <li><a href="#" class="text-sand-100 hover:text-brand-primary transition-colors">{t.terms}</a></li>
        </ul>
      </div>
    </div>
    <div class="pt-8 border-t border-white/5 text-center md:text-left flex flex-col md:flex-row justify-between items-center text-sm text-sand-100/60">
      <p>&copy; {currentYear} Surf Bits. {t.rights}</p>
      <div class="flex space-x-4 mt-4 md:mt-0">
        <!-- Social Icons Placeholders -->
      </div>
    </div>
  </div>
</footer>
