---
import { getUiTranslation, type Language } from '../lib/i18n';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = getUiTranslation(lang as Language);

// Split the "madeWithLove" string to insert the link
// We assume the string ends with "Pixlab Studio" or contains it.
// PT: "Feito com amor por Pixlab Studio"
// EN: "Made with love by Pixlab Studio"
// ES: "Hecho con amor por Pixlab Studio"
// Simple replace strategy:
const signature = t.madeWithLove.replace('Pixlab Studio', '<a href="https://www.pixlab.studio" target="_blank" rel="noopener noreferrer" class="hover:text-slate-300 transition-colors">Pixlab Studio</a>');
---

<footer class="w-full mt-auto px-4">
    <div class="w-full max-w-4xl mx-auto flex flex-col md:flex-row justify-between items-center text-sm text-slate-500 py-8 gap-4 border-t border-slate-800/50">
        <p class="font-medium tracking-widest uppercase">2025 â€¢ surf-bits.com</p>
        <p set:html={signature} />
    </div>
</footer>
