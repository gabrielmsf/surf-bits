---
interface Props {
  class?: string;
  href?: string;
}

const { class: className, href } = Astro.props;

const baseStyles = "group relative overflow-hidden rounded-2xl glass-panel transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl hover:shadow-brand-primary/10";
---

{
  href ? (
    <a href={href} class={`${baseStyles} block ${className || ''}`}>
      <slot />
    </a>
  ) : (
    <div class={`${baseStyles} ${className || ''}`}>
      <slot />
    </div>
  )
}
