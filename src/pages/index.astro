---

<BaseLayout title="Surf Bits - Select Region">
	<main id="main-content" class="text-center space-y-12 animate-in fade-in duration-1000 max-w-4xl mx-auto">
		<div class="space-y-4">
			<h1 class="text-4xl md:text-6xl font-black tracking-tighter text-white">
				SURF BITS
			</h1>
			<p class="text-slate-400 text-lg">
				Select your region / Selecione sua regiÃ£o
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {regions.map((region) => (
                <a
                    href={getRoute.regionalHome(region.lang, region.country)}
                    class="group relative block bg-slate-800/50 hover:bg-slate-800 border border-slate-700 hover:border-blue-500/50 rounded-xl p-8 transition-all duration-300 hover:-translate-y-1"
                >
                    <div class="text-4xl mb-4 group-hover:scale-110 transition-transform duration-300">{region.flag}</div>
                    <h3 class="text-xl font-bold text-white group-hover:text-blue-400 transition-colors">{region.label}</h3>
                    <p class="text-sm text-slate-500 mt-2 uppercase tracking-wider">{region.lang}</p>
                </a>
            ))}
		</div>

        <div class="pt-8 border-t border-slate-800/50">
            <p class="text-slate-500 text-sm mb-4">All Supported Regions & Languages</p>
            <div class="flex flex-wrap justify-center gap-4 text-sm">
                {Object.values(COUNTRIES).map(country => (
                    Object.values(LANGUAGES).map(lang => (
                        <a href={getRoute.regionalHome(lang, country)} class="text-slate-400 hover:text-cyan-400 transition-colors">
                            {country.toUpperCase()}/{lang.toUpperCase()}
                        </a>
                    ))
                ))}
            </div>
        </div>
	</main>
</BaseLayout>
